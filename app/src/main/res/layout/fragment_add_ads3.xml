<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addAdsSlides.AddAdsFragment3"
    android:padding="@dimen/_16sdp">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintTop_toTopOf="parent"
       >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/img_upload"
          android:background="@drawable/rectangel_border"
          android:drawableTop="@drawable/ic_upload"
          android:text="Upload Images"
          style="@style/header"
          android:drawablePadding="@dimen/_6sdp"
          android:src="@drawable/ic_upload"
          android:padding="@dimen/_6sdp"
          android:tooltipText="ddddd"
          app:layout_constraintTop_toTopOf="parent" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:id="@+id/show_img_count"
          android:text="5/50"
          style="@style/ads_header"
         android:background="@drawable/rectangel_border"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/img_upload"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:id="@+id/rv_img_upload"
         app:layout_constraintTop_toBottomOf="@+id/show_img_count"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
         app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
         app:spanCount="5"/>


   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:id="@+id/button_container_ads3"

       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       >

      <com.google.android.material.button.MaterialButton
          android:id="@+id/pre_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/red"
          android:text="@string/prev_step"
          app:cornerRadius="@dimen/_5sdp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/next_btn_ads2"
          app:layout_constraintBottom_toBottomOf="parent" />
      <com.google.android.material.button.MaterialButton
          android:id="@+id/next_btn_ads2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/_10sdp"
          android:text="@string/next_step"
          app:cornerRadius="@dimen/_5sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toRightOf="@+id/pre_btn"
          app:layout_constraintTop_toTopOf="parent" />


   </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>