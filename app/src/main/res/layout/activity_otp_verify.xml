<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUpFragment.OtpVerifyActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otp_verify_password_back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="@dimen/_16sdp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otp_verify_password_label"
            android:text="@string/enter_4_digits_code"
            style="@style/segoe_ui_bold"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otp_verify_password_msg_label"
            style="@style/segoe_ui"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@+id/otp_verify_password_label"
            android:text="Enter the 4 digits code that you received on your registered mail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otp_verify_email_enter"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/otp_verify_password_msg_label">

          <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:id="@+id/otp_verify_enter1"
                android:hint="0"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textAlignment="center"
                android:background="@drawable/rectangel_border" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/otp_verify_enter2"
                android:hint="0"

                android:background="@drawable/rectangel_border" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/otp_verify_enter3"
                android:hint="0"
                android:background="@drawable/rectangel_border" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:id="@+id/otp_verify_enter4"
                android:hint="0"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/rectangel_border" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resend_otp_container"
            app:layout_constraintTop_toBottomOf="@+id/otp_verify_email_enter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resend_otp_again_label"
                android:text="@string/send_new"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resend_otp_again_btn"
                android:text="code again?"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/sky_blue_700"
                />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:id="@+id/otp_continue_btn"
            android:text="@string/continue_text"
            android:background="@drawable/border"
            android:textColor="@color/sky_blue_500"
            android:textAlignment="center"
            style="@style/segoe_ui"
            android:layout_marginTop="@dimen/_16sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resend_otp_container"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>