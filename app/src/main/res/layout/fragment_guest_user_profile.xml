<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".seller_profile.ProfileFragment"
    android:padding="@dimen/_16sdp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/general_setting_container"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/general_setting"
            style="@style/text_header"
            android:text="Account"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/general_edit"
            style="@style/text_header"
            android:text="Edit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_container"
            android:padding="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@+id/general_edit"
            android:background="@drawable/rectangel_border"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guest_login"
                android:text="@string/login"
                style="@style/text_header"
                android:paddingVertical="@dimen/_4sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableRight="@drawable/ic_forward"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:id="@+id/guest_signup"
                style="@style/text_header"
                android:paddingVertical="@dimen/_4sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableRight="@drawable/ic_forward"
                app:layout_constraintTop_toBottomOf="@+id/guest_login"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:text="Contact"
            style="@style/text_header"
            app:layout_constraintTop_toBottomOf="@+id/account_container"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_setting"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            android:background="@drawable/rectangel_border"
            android:padding="@dimen/_6sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/faq"
                android:text="@string/faq"
                style="@style/text_header"
                android:paddingVertical="@dimen/_4sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableRight="@drawable/ic_forward"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:id="@+id/about"
                style="@style/text_header"
                android:paddingVertical="@dimen/_4sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableRight="@drawable/ic_forward"
                app:layout_constraintTop_toBottomOf="@+id/faq"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                style="@style/text_header"
                android:paddingVertical="@dimen/_4sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_avatar"
                android:drawableRight="@drawable/ic_forward"
                app:layout_constraintTop_toBottomOf="@+id/about"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>