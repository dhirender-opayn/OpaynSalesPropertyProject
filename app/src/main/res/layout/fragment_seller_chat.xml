<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller_chat.SellerChatFragment">




    <include layout="@layout/search_toolbar"
       app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/chat_search_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:id="@+id/rv_seller_chat"
        app:layout_constraintTop_toBottomOf="@+id/chat_search_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:listitem="@layout/seller_chat_view_holder"/>

</androidx.constraintlayout.widget.ConstraintLayout>