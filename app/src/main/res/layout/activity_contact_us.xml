<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ContactUsActivity">


    <include
        android:id="@+id/contact_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/contactus_form_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            style="@style/header"
            android:text="@string/contact_us"
            android:textColor="@color/sky_blue_700" />

        <EditText
            android:id="@+id/contact_name"
            style="@style/edittext"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/rectangel_border"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Adele Mark" />

        <EditText
            android:id="@+id/contact_mobile"
            style="@style/edittext"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/rectangel_border"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="+91-987654321" />

        <EditText
            android:id="@+id/contact_email"
            style="@style/edittext"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/rectangel_border"
            android:drawableLeft="@drawable/ic_email_round_color"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Adele Mark" />


        <EditText
            android:id="@+id/contact_us_query_sub"
            style="@style/edittext"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/rectangel_border"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Subject" />

        <EditText
            android:id="@+id/contact_us_query_des"
            style="@style/edittext"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/rectangel_border"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="start"
            android:hint="Description"
            android:textAlignment="textStart" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactUs_btn"
            style="@style/button"
            android:text="Contact Us" />


    </LinearLayout>
</FrameLayout>