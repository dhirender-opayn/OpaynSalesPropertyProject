<?xml version="1.0" encoding="utf-8"?>
<resources>


    // font family
    <style name="segoe_ui">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="segoe_ui_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



    //header
    <style name="header">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    //Text Header
    <style name="text_header">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>
    //text view
    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    // Edittext
    <style name="edittext">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>



    //BACK ARROW
    <style name="back_arrow_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>

    </style>
    //LOGIN-SignUp SCREEN
    <style name="login_signup_heading">
         <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/sky_blue_700</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="login_signup_field">
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="login_signup_submit_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/_150sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    //card holder yours ads
    <style name="widget_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:background">@drawable/round_border_fill</item>
    </style>

    <style name="widget_button2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:background">@drawable/rectangle_border_fill_button</item>
    </style>

    //Add Ads recycler View//
    <style name="add_ads_rv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">3</item>

    </style>
    //spinner state list
    <style name="spinner_style2">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    //Horizontal Slider
    <style name="slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //Recycler View
    <style name="recycler_view_text">
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/rectangel_border</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/roboto_regular</item>

    </style>

    //Button
    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    //Card view
    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>

    </style>
    <style name="toolbar">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_22sdp</item>

    </style>



</resources>